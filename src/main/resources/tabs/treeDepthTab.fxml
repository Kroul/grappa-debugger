<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.github.fge.grappa.debugger.csvtrace.tabs.treedepth.TreeDepthTabDisplay">
    <top>
        <ToolBar>
            <HBox alignment="CENTER" spacing="5.0">
                <Label text="Lines to display:"/>
                <ComboBox fx:id="linesDisplayed"/>

                <Separator orientation="VERTICAL"/>

                <Button fx:id="prevLines" text="Previous"
                    onMouseClicked="#previousLinesEvent"/>
                <Label fx:id="currentLines" text="(no data)"/>
                <Button fx:id="nextLines" text="Next"
                    onMouseClicked="#nextLinesEvent"/>

                <Separator orientation="VERTICAL"/>

                <HBox fx:id="refreshBox" alignment="CENTER" spacing="5.0">
                    <Button fx:id="tabRefresh" text="Refresh"
                        onMouseClicked="#chartRefreshEvent"/>
                    <ProgressBar fx:id="progressBar" visible="false"/>
                </HBox>
            </HBox>
        </ToolBar>
    </top>
    <center>
        <AreaChart fx:id="chart" legendSide="TOP"
            title="Matcher status by line" animated="false">
            <xAxis>
                <NumberAxis fx:id="xAxis" tickUnit="1.0" autoRanging="false"
                    minorTickVisible="false" forceZeroInRange="false"
                    label="Line number"/>
            </xAxis>
            <yAxis>
                <NumberAxis minorTickVisible="false" autoRanging="true"
                    forceZeroInRange="true" label="Matchers"/>
            </yAxis>
        </AreaChart>
    </center>
</BorderPane>
