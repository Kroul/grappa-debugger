<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.TextFlow?>

<TabPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.github.fge.grappa.debugger.tracetab.TraceTabDisplay">
    <Tab text="Parse tree" closable="false">
        <SplitPane dividerPositions="0.5">
            <padding>
                <Insets top="5.0" bottom="5.0" right="5.0" left="5.0"/>
            </padding>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                <BorderPane>
                    <top>
                        <ToolBar>
                            <Button fx:id="treeExpand" text="Expand tree"
                                onMouseClicked="#expandParseTreeEvent"/>
                        </ToolBar>
                    </top>
                    <center>
                        <TreeView fx:id="parseTree" editable="false"/>
                    </center>
                </BorderPane>
                <TitledPane collapsible="true" text="Node information">
                    <GridPane gridLinesVisible="false" hgap="5.0" vgap="5.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES"/>
                            <ColumnConstraints hgrow="SOMETIMES"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="SOMETIMES"/>
                            <RowConstraints vgrow="SOMETIMES"/>
                            <RowConstraints vgrow="SOMETIMES"/>
                            <RowConstraints vgrow="SOMETIMES"/>
                            <RowConstraints vgrow="SOMETIMES"/>
                            <RowConstraints vgrow="SOMETIMES"/>
                            <RowConstraints vgrow="SOMETIMES"/>
                            <RowConstraints vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Depth:" GridPane.rowIndex="0"
                            GridPane.columnIndex="0"/>
                        <Label fx:id="parseNodeLevel" GridPane.rowIndex="0"
                            GridPane.columnIndex="1"/>

                        <Label text="Matcher name:" GridPane.rowIndex="1"
                            GridPane.columnIndex="0"/>
                        <Label fx:id="parseNodeRuleName" GridPane.rowIndex="1"
                            GridPane.columnIndex="1"/>

                        <Label text="Matcher type:" GridPane.rowIndex="2"
                            GridPane.columnIndex="0"/>
                        <Label fx:id="parseNodeMatcherType"
                            GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Matcher Class:" GridPane.rowIndex="3"
                            GridPane.columnIndex="0"/>
                        <Label fx:id="parseNodeMatcherClass"
                            GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Status:" GridPane.rowIndex="4"
                            GridPane.columnIndex="0"/>
                        <Label fx:id="parseNodeStatus" GridPane.rowIndex="4"
                            GridPane.columnIndex="1"/>

                        <Label text="Starting position:" GridPane.rowIndex="5"
                            GridPane.columnIndex="0"/>
                        <Label fx:id="parseNodeStart" GridPane.rowIndex="5"
                            GridPane.columnIndex="1"/>

                        <Label text="Ending position:" GridPane.rowIndex="6"
                            GridPane.columnIndex="0"/>
                        <Label fx:id="parseNodeEnd" GridPane.rowIndex="6"
                            GridPane.columnIndex="1"/>

                        <Label text="Time spent:" GridPane.rowIndex="7"
                            GridPane.columnIndex="0"/>
                        <Label fx:id="parseNodeTime" GridPane.rowIndex="7"
                            GridPane.columnIndex="1"/>
                    </GridPane>
                </TitledPane>
            </SplitPane>
            <BorderPane>
                <top>
                    <ToolBar>
                        <Label fx:id="textInfo"/>
                    </ToolBar>
                </top>
                <center>
                    <ScrollPane fx:id="inputTextScroll">
                        <TextFlow fx:id="inputText">
                        </TextFlow>
                    </ScrollPane>
                </center>
            </BorderPane>
        </SplitPane>
    </Tab>
    <Tab text="Global statistics" fx:id="globalStatsTab" closable="false"/>
    <Tab text="Class statistics" fx:id="classStatsTab" closable="false"/>
    <Tab text="All events" fx:id="eventsTab" closable="false">
        <TableView fx:id="events">
            <columns>
                <TableColumn fx:id="eventTime" text="Time"/>
                <TableColumn fx:id="eventType" text="Event type"/>
                <TableColumn fx:id="eventRule" text="Matcher"/>
                <TableColumn fx:id="eventIndex" text="Index"/>
                <TableColumn fx:id="eventDepth" text="Depth"/>
                <TableColumn fx:id="eventPath" text="Matcher path"/>
            </columns>
        </TableView>
    </Tab>
</TabPane>

